  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "setup": "npm install && npm run setup:env",
    "setup:env": "node -e \"const fs = require('fs'); if (!fs.existsSync('.env')) { fs.copyFileSync('.env.example', '.env'); console.log('✅ .env file created! Please fill in your API keys.'); } else { console.log('⚠️  .env file already exists.'); }\"",
    "check:env": "node -e \"const fs = require('fs'); if (!fs.existsSync('.env')) { console.error('❌ .env file not found! Run: npm run setup:env'); process.exit(1); } console.log('✅ .env file exists');\"",
    "lint": "echo 'Linting not configured yet'",
    "test": "echo 'Tests not configured yet'",
    "clean": "rm -rf node_modules dist .vite",
    "reinstall": "npm run clean && npm install"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-label": "^2.1.7",
